<div class="page-header">
  <h3>Team #<%= @team.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Teams</dt>
      <dd><%= @team.teams %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/teams" class="btn btn-primary">
        Back
      </a>
      <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Team has many tennis_players -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Tennis Players
      </li>

      <% @team.tennis_players.each do |tennis_player| %>
        <li class="list-group-item">
          <a href="/tennis_players/<%= tennis_player.id %>">
            <%= tennis_player.email %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/tennis_players/<%= tennis_player.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/tennis_players/<%= tennis_player.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_tennis_player/<%= tennis_player.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
