<div class="page-header">
  <h1>
    Tennis players
    <a href="/tennis_players/new" class="btn btn-lg btn-success">New Tennis player</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Team</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Actions</th>
      </tr>

      <% @tennis_players.each do |tennis_player| %>
      <tr>
        <td><%= tennis_player.email %></td>
        <td><%= tennis_player.password %></td>
        <td>
          <% if tennis_player.teams.present? %>
            <a href="/teams/<%= tennis_player.teams.id %>">
              <%= tennis_player.teams.name %>
            </a>
          <% end %>
        </td>
        <td><%= tennis_player.first_name %></td>
        <td><%= tennis_player.last_name %></td>
        <td>
          <a href="/tennis_players/<%= tennis_player.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tennis_players, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
