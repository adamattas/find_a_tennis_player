<div class="page-header">
  <h3>Tennis Player #<%= @tennis_player.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @tennis_player.email %></dd>

      <dt>Password</dt>
      <dd><%= @tennis_player.password %></dd>

      <dt>Team</dt>
      <dd>
        <% if @tennis_player.teams.present? %>
          <a href="/teams/<%= @tennis_player.team %>">
            <%= @tennis_player.teams.name %>
          </a>
        <% end %>
      </dd>

      <dt>First name</dt>
      <dd><%= @tennis_player.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @tennis_player.last_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tennis_players" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
