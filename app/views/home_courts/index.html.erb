<div class="page-header">
  <h1>
    Home courts
    <a href="/home_courts/new" class="btn btn-lg btn-success">New Home court</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Teams</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>

      <% @home_courts.each do |home_court| %>
      <tr>
        <td>
          <% if home_court.teams.present? %>
            <a href="/teams/<%= home_court.teams.id %>">
              <%= home_court.teams.teams %>
            </a>
          <% end %>
        </td>
        <td><%= home_court.location %></td>
        <td>
          <a href="/home_courts/<%= home_court.id %>" class="btn btn-primary">Show</a>
          <a href="/home_courts/<%= home_court.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_home_court/<%= home_court.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @home_courts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>