<div class="page-header">
  <h1>
    Home courts
    <a href="/home_courts/new" class="btn btn-lg btn-success">New Home court</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Teams</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>

      <% @home_courts.each do |home_court| %>
      <tr>
        <td><%= home_court.teams_id %></td>
        <td><%= home_court.location %></td>
        <td>
          <a href="/home_courts/<%= home_court.id %>" class="btn btn-primary">Show</a>
          <a href="/home_courts/<%= home_court.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_home_court/<%= home_court.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
