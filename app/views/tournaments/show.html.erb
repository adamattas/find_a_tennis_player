<div class="page-header">
  <h3>Tournament #<%= @tournament.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tournaments" class="btn btn-primary">
        Back
      </a>
      <a href="/tournaments/<%= @tournament.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_tournament/<%= @tournament.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Tournament has many teams -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Teams
      </li>

      <% @tournament.teams.each do |team| %>
        <li class="list-group-item">
          <a href="/teams/<%= team.id %>">
            <%= team.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/teams/<%= team.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_team/<%= team.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_team" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for tournament -->
      <div class="form-group">
        <label for="tournament" class="control-label">
          Tournament
        </label>

        <%= select_tag(:tournament, options_from_collection_for_select(Tournament.all, :id, :created_at), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Team
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
